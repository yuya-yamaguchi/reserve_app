.main
  .home-top
    = image_tag("/studio_img/top_image.png", class: "home-top")
    .home-top__name
      Studio XXXX
    
  
  .studio-list
    .studio-list__title
      スタジオ一覧
    %ul.studio-list__studios
      - @studios.each_with_index do |studio, index|
        = render partial: "studio", locals: { studio: studio, index: index }
  .board
    .board__title
      掲示板
    .board__posts
      = render partial: "posts/posts", locals: { posts: @posts }
      .board__posts__link
        = link_to "掲示板一覧へ", posts_path

